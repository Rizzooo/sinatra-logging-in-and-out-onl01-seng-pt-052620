<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>title</title>
    <link rel="stylesheet" href="stylesheets/bootstrap.css" type="text/css">  
  </head>
  <body id="page-top">
    <% assure = Helpers.is_logged_in?(session) %>
    <% if assure == true %>
      <%@current_user = Helpers.current_user(session)%>
      <h1>Welcome <%=Helpers.current_user.username%></h1>
      <h3>Your Balance: <%= @current_user.balance%></h3>
      <a href="/logout">Log Out</a>
      
    <% else %>
      <a href="/">Home</a>
    <% end %>  
  </body>
</html>